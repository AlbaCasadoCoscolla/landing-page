---
import KeepScrolling from "@/assets/keep-scrolling.svg"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Memories en Cendra</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
    <KeepScrolling
      id="keep-scrolling-arrow"
      class="fixed bottom-3 right-0 left-0 mx-auto text-orange-400 drop-shadow-2xl animate-bounce-pulse z-[999] transition-opacity duration-500"
    />

    <script>
      document.addEventListener("scroll", () => {
        const arrow = document.getElementById("keep-scrolling-arrow")
        if (!arrow) return

        // Altura total del documento
        const scrollTop = window.scrollY
        const windowHeight = window.innerHeight
        const documentHeight = document.body.scrollHeight

        // Si el usuario estÃ¡ a menos de 100px del final, oculta la flecha
        if (scrollTop + windowHeight >= documentHeight - 100) {
          arrow.style.opacity = "0"
        } else {
          arrow.style.opacity = "1"
        }
      })
    </script>
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  @theme {
     --font-sans: "Poppins", system-ui, sans-serif;
     --font-narrow: "Poppins", system-ui, sans-serif;
     --animate-bounce-pulse: bounce-pulse 2s ease-in-out infinite;
  }

  @keyframes bounce-pulse {
    0% {
      transform: translateY(0);
      scale: 0.8;
      opacity: 0.8;
    }

    50% {
      transform: translateY(-5px);
      opacity: 1;
      scale: 1;
    }

    100% {
      transform: translateY(0);
      scale: 0.8;
      opacity: 0.8;
    }
  }

  html,
  body {
    background: #111;
    height: 300vh;
    overflow-x: hidden;
    overscroll-behavior: none;
    color: white;
    margin: 0;
    width: 100%;
  }
</style>
